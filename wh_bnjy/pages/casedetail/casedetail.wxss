/* about_us/pages/productdetail/productdetail.wxss */
.swiper {
    width: 100%;
    height: 380rpx;
}
.slide-image {
    width: 100%;
    height: 100%;
}
.container {
    width: 90%;
    margin: 20rpx auto  0rpx;
    display: flex;
    /* align-items: center; */
    justify-content: space-between;
    flex-wrap: wrap;
    flex-direction: row;
    margin-top: 10px
}
.ListItem {
    width: 45%;
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 30rpx;
    color: #484747;
}

.listBg {
    border-radius: 30rpx 0rpx 30rpx 0rpx;
    box-shadow: 2rpx 5rpx 25rpx rgba(0,0,0,0.2);
    width: 100%;
    height: 220rpx;
    overflow: hidden;
}

.ListItem image {
    width: 100%;
    height: 100%;
}

.ListItem .title {
    width: 100%;
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}