.content {
    padding-bottom: 100rpx;
}

.swiper {
    width: 100%;
    height: 380rpx;
}

.slide-image {
    width: 100%;
    height: 100%;
}
.Keyword {
    font-size: 30rpx;
    color: #312f3d;
    width: 80%;
    margin: 0 auto;
    background-color: #f0eeee;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
}


page .wx-swiper-dots {
    bottom: 20rpx;
}

page .wx-swiper-dot.wx-swiper-dot-active {
    width: 40rpx;
    border-radius: 8rpx;
}

.category {
    white-space: nowrap;
    display: flex;
    align-items: center;
    width: 90%;
    margin: 0rpx auto;
}

.cateItem {
    display: inline-block;
    font-size: 30rpx;
    padding: 20rpx;
    position: relative;
    margin-right: 30rpx;
}

.cateItem::before {
    content: '';
    display: block;
    width: 100%;
    height: 3px;
    position: absolute;
    bottom: 0;
    left: 0;
    background: currentColor;
    opacity: 0;
    transition: all 0.3s ease;
}

.active {
    color: #312f3d;
}

.active::before {
    width: 80%;
    left: 10%;
    opacity: 1;
    transition: all 0.3s ease;
}

.searchBox {
    position: relative;
}

.searchImg {
    height: 40rpx;
    width: 38rpx;
    position: absolute;
    top: 7rpx;
    left: 0;
}

.inputKey {
    padding-left: 60rpx;
    font-size: 30rpx;
    color: #312f3d;
}

.newsImg {
    width: 150rpx;
    height: 150rpx;
    border-radius: 20rpx 0rpx 20rpx 0rpx;
}

.bb {
    border-bottom: 1rpx solid #ededed;
}

.newsDesc {
    width: 500rpx;
    margin-left: 30rpx;
    height: 150rpx;
}

.itemDesc {
    width: 100%;
    font-size: 34rpx;
    font-weight: bold;
    color: #515151;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 20rpx;
}
.container {
    width: 90%;
    margin: 30rpx auto 0rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
}
.ListItem {
    width: 45%;
    text-align: center;
    font-size: 30rpx;
    margin-bottom: 30rpx;
    color: #484747;
}

.listBg {
    border-radius: 30rpx 0rpx 30rpx 0rpx;
    box-shadow: 2rpx 5rpx 25rpx rgba(0,0,0,0.2);
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}

.ListItem image {
    width: 100%;
    height: 100%;
}

.ListItem .title {
    width: 100%;
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}